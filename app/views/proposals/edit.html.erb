<% if @proposal.errors.any? %>
  <div id="error-explanation">
    <div id="error-intro">
      <%= "Something went wrong!" %>
    </div>
    <ul class='errors-list'>
      <% @proposal.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='form'>
  <h2 class='page-title'>Edit Your Proposal</h2>

  <%= form_for @proposal, url: project_proposal_path do |f| %>
    <%= f.label :description, 'Proposal Description' %>
    <%= f.cktext_area :description, ckeditor: { toolbar: 'mini' } %>

    <%= f.submit 'Edit Proposal', class: 'post-routes-button' %>
  <% end %>
</div>
