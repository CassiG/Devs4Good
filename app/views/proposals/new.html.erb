<% if @proposal.errors.any? %>
  <div id="error-explanation">
    <div id="error-intro">
      <%= "Something went wrong!" %>
    </div>
    <ul class='errors-list'>
      <% @proposal.errors.full_messages.each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class='form'>
  <h2 class='page-title'>Submit Your Proposal Here:</h2>

  <%= form_for [@project, @proposal] do |f| %>
    <%= f.label :description, 'Proposal for Project' %>
    <%= f.cktext_area :description, ckeditor: { toolbar: 'mini' }, value: 'Example: We can help you fulfill your vision by ...' %>
    <%= f.hidden_field :selected, { :value => false } %>
    <%= f.submit 'Submit Proposal', class: 'post-routes-button' %>
  <% end %>
</div>
