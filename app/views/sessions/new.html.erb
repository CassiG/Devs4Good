<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<div class='form'>
  <h3 class='title-form'>Login</h3>
<%= form_for @user, url: sessions_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.submit 'Login', class: 'create-account-button' %>
<% end %>
</div>
