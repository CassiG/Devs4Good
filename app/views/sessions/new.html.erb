<h2>Login</h2>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @user, url: sessions_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.submit 'Login' %>
<% end %>
